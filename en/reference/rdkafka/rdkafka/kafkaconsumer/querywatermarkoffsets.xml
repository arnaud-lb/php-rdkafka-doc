<refentry xml:id="rdkafka-kafkaconsumer.querywatermakoffsets" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>RdKafka\KafkaConsumer::queryWatermarkOffsets</refname>
  <refpurpose>Query offsets for a topic / partition</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>void</type><methodname>RdKafka\KafkaConsumer::queryWatermarkOffsets</methodname>
   <methodparam><type>string</type><parameter>topic</parameter></methodparam>
   <methodparam><type>integer</type><parameter>partition</parameter></methodparam>
   <methodparam><type>integer</type><parameter role="reference">low</parameter></methodparam>
   <methodparam><type>integer</type><parameter role="reference">high</parameter></methodparam>
   <methodparam><type>integer</type><parameter>timeout_ms</parameter></methodparam>
  </methodsynopsis>
  <para>
   Query broker for low (oldest/beginning) or high (newest/end) offsets for a partition
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   <varlistentry>
    <term><parameter>topic</parameter> (<type>string</type>)</term>
    <listitem>
     <para>
      The topic name.
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>partition</parameter> (<type>integer</type>)</term>
    <listitem>
     <para>
      The partition.
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>low</parameter> (<type>integer</type>)</term>
    <listitem>
     <para>
      The oldest/beginning offset for the partition
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter role="reference">high</parameter> (<type>integer</type>)</term>
    <listitem>
     <para>
      The newest/end offset for the partition.
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter role="reference">timeout_ms</parameter> (<type>integer</type>)</term>
    <listitem>
     <para>
      Timeout in millisecounds for this operation.
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Returns no value.
  </para>
 </refsect1>

</refentry>

